<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tree Library</title>
    <link rel="stylesheet" href="/css/master.css">
    <link rel="stylesheet" href="/css/tree-show.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  </head>
  <body>
    <div class="wrapper">

      <div class="web-title">
        <h1>Melbourne Tree Libary</h1>
      </div>

      <div class="layout-box">

        <div class="header">

          <form action="/" method="get">
            <button>home</button>
          </form>

          <% if logged_in? %>

            <a href="/profile/<%= current_user.id %>">
              <img
              class="photo-icon"
              src="<%= current_user.photo %>"
              alt="<%= current_user.username %>"/>
            </a>

            <form action="/session" method="post">
              <input type="hidden" name="_method" value="delete">
              <button>Logout</button>
            </form>

          <% else %>

            <form action= "/session/new" method="get">
              <button>Login</button>
            </form>

            <form action= "/session/create" method="post">
              <button>Create login</button>
            </form>

          <% end %>

        </div>

        <%= yield %>

      </div>


    </div>


    <script src="/javascripts/application.js">
    </script>
  </body>
</html>
