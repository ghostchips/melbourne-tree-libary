
<h3>Edit profile</h3>

<form action="/profile/update/<%= @user.id %>" method="post">

  <label>email</label>
  <input type="text" name="email" value="<%= @user.email %>">

  <label>Profile Photo</label>
  <textarea name="photo" rows="8" cols="40">
    <%= @user.photo %>
  </textarea>

  <label>Bio</label>
  <textarea name="bio" rows="8" cols="40">
    <%= @user.bio %>
  </textarea>

  <label>Location</label>
  <select name="location">
    <% @location.each do |location| %>
      <option>
        <%= "#{location.suburb} - #{location.postcode}" %>
      </option>
    <% end %>
  </select>

  <button>Edit entry</button>

</form>
